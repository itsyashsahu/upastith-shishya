<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.HomeActivity">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        >
        <TextView
            android:id="@+id/text_enroll_students"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="Enroll Students"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/custom_color_bg"
            android:layout_marginTop="36dp"
            />
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/text_enroll_students"
            >
            <TextView
                android:id="@+id/text_studentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: "
                android:textStyle="bold"
                android:textColor="@color/custom_color_bg"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/studentName"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/text_studentName"
                android:background="@drawable/rectangular_input_bg"
                android:hint="Name"
                android:textColor="@color/custom_color_bg"
                android:textSize="16sp"
                android:elegantTextHeight="true"
                android:inputType="text"
                android:paddingLeft="10dp"
                tools:ignore="TouchTargetSizeCheck"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/rl1"
            >
            <TextView
                android:id="@+id/text_studentRollNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roll No: "
                android:textStyle="bold"
                android:textColor="@color/custom_color_bg"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/studentRollNo"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/text_studentRollNo"
                android:background="@drawable/rectangular_input_bg"
                android:hint="Roll No"
                android:textColor="@color/custom_color_bg"
                android:textSize="16sp"
                android:elegantTextHeight="true"
                android:inputType="text"
                android:paddingLeft="10dp"
                tools:ignore="TouchTargetSizeCheck"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/rl2"
            >
            <TextView
                android:id="@+id/text_studentBatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batch: "
                android:textStyle="bold"
                android:textColor="@color/custom_color_bg"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/studentBatch"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/text_studentBatch"
                android:background="@drawable/rectangular_input_bg"
                android:hint="Batch"
                android:textColor="@color/custom_color_bg"
                android:textSize="16sp"
                android:elegantTextHeight="true"
                android:inputType="text"
                android:paddingLeft="10dp"
                tools:ignore="TouchTargetSizeCheck"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/rl3"
            >
            <TextView
                android:id="@+id/text_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department: "
                android:textStyle="bold"
                android:textColor="@color/custom_color_bg"
                android:textSize="16sp"
                />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:id="@+id/departmentDropdownLayout"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/text_department"
                app:boxStrokeWidth="2dp"
                app:endIconTint="@color/custom_color_bg"
                android:textColorHint="@color/custom_color_bg"
                app:boxStrokeColor="@color/custom_color_bg"
                app:counterTextColor="@color/custom_color_bg"
                app:hintTextColor="@color/custom_color_bg"
                app:placeholderTextColor="@color/custom_color_bg"
                app:counterOverflowTextColor="@color/custom_color_bg"
                android:background="@drawable/rectangular_input_bg"
                >
                <AutoCompleteTextView
                    android:id="@+id/departmentDropDownView"
                    android:layout_width="match_parent"
                    android:background="@drawable/drop_down_bg"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="true"
                    android:hint="Cse"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck"
                    android:paddingTop="10dp"
                    android:inputType="none"
                    android:maxLines="1"
                    android:textColor="@color/custom_color_bg"
                    android:textColorHint="@color/custom_color_bg"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@id/rl4"
            >
            <TextView
                android:id="@+id/text_studentEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Id: "
                android:textStyle="bold"

                android:textColor="@color/custom_color_bg"
                android:textSize="16sp"
                />
            <EditText
                android:id="@+id/studentEmail"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/text_studentEmail"
                android:background="@drawable/rectangular_input_bg"
                android:hint="Email Id"

                android:textColor="@color/custom_color_bg"
                android:textSize="16sp"
                android:elegantTextHeight="true"
                android:inputType="text"
                android:paddingLeft="10dp"
                tools:ignore="TouchTargetSizeCheck"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_enroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl5"
            android:layout_marginTop="25dp"
            android:text="Enroll"
            android:textColor="@color/white"
            android:backgroundTint="@color/custom_color_bg"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textSize="20sp"
            />
    </RelativeLayout>


</FrameLayout>