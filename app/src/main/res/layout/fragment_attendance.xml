<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AttendanceFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/custom_color_bg">
        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:id="@+id/upastithLogoImageView"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/upastith_logo" />



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/attendanceFragmentProfile"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/upastithLogoImageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/textView3_attendance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/upastithLogoImageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="-3dp"

            android:background="@drawable/curved_textview"
            android:backgroundTint="@color/white" />

        <TextView
            android:id="@+id/text_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView3_attendance"
            android:layout_alignParentEnd="true"
            android:text="Attendance"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/custom_color_bg"
            android:layout_marginStart="28dp"
            android:layout_marginTop="36dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/card1_attendance"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/text_attendance"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            app:cardBackgroundColor="@color/custom_color_card"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                android:paddingLeft="8dp">
                <ImageView
                    android:id="@+id/image_bluetooth"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/ic_bluetooth"
                    />
                <TextView
                    android:id="@+id/text_bluetooth"
                    android:layout_toRightOf="@id/image_bluetooth"
                    android:layout_marginLeft="21dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/custom_color_bg"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"
                    android:text="Bluetooth"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/bluetooth_checkbox"
                    android:layout_width="wrap_content"
                    tools:ignore="TouchTargetSizeCheck"
                    android:buttonTint="@color/custom_color_bg"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/custom_color_bg" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card2_attendance"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/card1_attendance"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            app:cardBackgroundColor="@color/custom_color_card"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                android:paddingLeft="8dp">

                <ImageView
                    android:id="@+id/image_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_location" />
                <TextView
                    android:id="@+id/text_location"
                    android:layout_toRightOf="@id/image_location"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Location"
                    android:textColor="@color/custom_color_bg"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/location_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:buttonTint="@color/custom_color_bg"
                    tools:ignore="TouchTargetSizeCheck"
                    android:backgroundTint="@color/custom_color_bg" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card3_attendance"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/card2_attendance"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            app:cardBackgroundColor="@color/custom_color_card"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp"
                android:paddingLeft="8dp">
                <ImageView
                    android:id="@+id/image_camera"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_camera"
                    />
                <TextView
                    android:id="@+id/text_camera"
                    android:layout_toRightOf="@id/image_camera"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/custom_color_bg"
                    android:text="Camera"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/camera_checkbox"
                    android:layout_width="wrap_content"
                    tools:ignore="TouchTargetSizeCheck"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/custom_color_bg"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@color/custom_color_bg" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/courseDropdownLayout"
            android:layout_below="@id/card3_attendance"
            android:layout_marginTop="15dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/icon_book"
            app:startIconTint="@color/custom_color_bg"
            app:boxStrokeWidth="2dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:textColorHint="@color/custom_color_bg"
            app:boxStrokeColor="@color/custom_color_bg"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:counterTextColor="@color/custom_color_bg"
            app:hintTextColor="@color/custom_color_bg"
            app:placeholderTextColor="@color/custom_color_bg"
            app:counterOverflowTextColor="@color/custom_color_bg"
            app:endIconTint="@color/custom_color_bg"
            android:background="@drawable/rectangular_input_bg">

            <AutoCompleteTextView
                android:id="@+id/courseDropDownView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Course"
                android:textStyle="bold"
                android:inputType="none"
                android:maxLines="10"
                android:textColor="@color/custom_color_bg"
                android:textColorHint="@color/custom_color_bg"
                android:textSize="20sp"
                android:background="@drawable/drop_down_bg"
                android:dropDownHeight="300dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/giveAttendanceButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rectangular_input_bg"
            android:backgroundTint="@color/custom_color_bg"
            android:text="Give Attendance"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </RelativeLayout>


</FrameLayout>