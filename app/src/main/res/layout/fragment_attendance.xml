<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AttendanceFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:text="Attendance"
            android:textAlignment="center"
            android:textColor="@color/custom_primary_color_chosen"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/loginInAttendanceImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/ic_person"
            android:background="@color/black"/>

        <Button
            android:id="@+id/giveAttendanceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Give Attendance"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/custom_primary_color_chosen"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true">

            <AutoCompleteTextView
                android:id="@+id/courseDropDownView"
                android:layout_width="match_parent"
                android:inputType="none"
                android:padding="16dp"
                android:layout_height="match_parent"
                android:text="Select Course" />
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>


</FrameLayout>